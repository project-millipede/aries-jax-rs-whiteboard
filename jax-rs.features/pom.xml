        <maven-install-plugin.version>2.5.2</maven-install-plugin.version>
        -->

        <!-- Override version for maven-deploy-plugin due to a bug similar to the maven-install-plugin -->
        <!--
        <maven-deploy-plugin.version>2.8.2</maven-deploy-plugin.version>
        -->

        <org.apache.aries.jax.rs.integration.version>1.0.3-SNAPSHOT</org.apache.aries.jax.rs.integration.version>

    </properties>

    <modules>
        <module>org.apache.aries.jax.rs.features.whiteboard</module>
        <module>org.apache.aries.jax.rs.features.jackson</module>
